{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.test.ts?(x)",
                    "**/*.spec.ts?(x)",
                    "**/test-utils.ts",
                    "webpack.common.js",
                    "webpack.dev.js",
                    "webpack.prod.js"
                ]
            }
        ]
    }
}